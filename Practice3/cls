#!/bin/bash

#########################################AUTORES#############################################
# - Para ejecutar el comando en el hilo principal se debe hacer uso de la instrucci√≥n source
# - Uso: source cls [Opciones] <ruta>
#############################################################################################

# Check if at least one parameter was provided
if [ "$#" -lt 1 ]; then
    echo "Uso: cls [Opciones] <ruta>"
    exit 1
fi

# Initialize an empty variable to store the options
opciones=""
# Initialize an empty variable to store the path
ruta=""

# Iterate over the arguments
for parametro in "$@"; do
    # Check if the parameter is an option
    if [[ $parametro == -* ]]; then
        # Add the option to the options string
        opciones="$opciones $parametro"
    else
        # The parameter is a path, so exit the loop
        ruta=$parametro
        break
    fi
done

# Invokes the cd command with the options and the path
if [ -z "$opciones" ]; then
    echo "ls $ruta"
    ls $ruta
else
    echo "ls $opciones $ruta"
    ls $opciones $ruta
fi

# Check if the cd command was successful
if [ "$?" -eq 0 ]; then

    ruta_absoluta=$(pwd)

    # Invokes the clog script with the command and the absolute path
    $ruta_absoluta/clog "ls" "$ruta"
else
    echo "cls: no se pudo listar el directorio: $ruta"
fi